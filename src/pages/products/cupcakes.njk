                        },
                        {
                            name: "Coloured paper",
                            image: "choices/cupcakes/cases/coloured-paper.jpg"
                        },
                        {
                            name: "Metallic foil",
                            image: "choices/cupcakes/cases/foil.jpg"
                        }
                    ]
                },
                {
                    name: "Flavours",
                    items: flavours
                },
                {
                    name: "Piping",
                    items: [
                        {
                            name: "Swirl",
                            image: "choices/cupcakes/piping/swirl.jpg"
                        },
                        {
                            name: "Mixed",
                            image: "choices/cupcakes/piping/mixed.jpg"
                        },
                        {
                            name: "Colours",
                            image: "choices/cupcakes/piping/colours.jpg"
                        },
                        {
                            name: "Flowers",
                            image: "choices/cupcakes/piping/flowers2.jpg"
                        },
                        {
                            name: "Novelty",
                            image: "choices/cupcakes/piping/novelty.jpg"
                        }
                    ]
                },
                {
                    name: "Toppers",
                    items: [
                        {
                            name: "Embossed",
                            image: "choices/cupcakes/toppers/embossed.jpg"
                        },
                        {
                            name: "Embossed - painted",
                            image: "choices/cupcakes/toppers/emboss-paint.jpg"
                        },
                        {
                            name: "Acryllic plaque",
                            image: "choices/cupcakes/toppers/plaque-acryllic.jpg"
