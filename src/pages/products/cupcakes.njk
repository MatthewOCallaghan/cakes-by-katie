{% set page = "cupcakes" %}
{% extends "layout.njk" %}

{% block head %}
    {% from "macros/image-carousel-head.njk" import imageCarouselHead %}
    {{ imageCarouselHead() }}
{% endblock %}

{% block main %}

    <section class="intro">

        <div class="intro-text">
            <p>Cupcakes are perfect for any occasion. Whether as the main event, a complement to your main cake to cater for various dietary requirements, or a thoughtful gift, my cupcakes are sure to delight.</p>
        </div>

        <div class="service-breakdown-container">
            {% from "macros/service-breakdown.njk" import serviceBreakdown %}
            {{ serviceBreakdown([
                {
                    image: 'heart.svg',
                    heading: 'Bespoke designs',
                    description: "I'll work with you to create your perfect cupcakes."
                },
                {
                    image: 'lemon.svg',
                    heading: flavours.length ~ ' flavours',
                    description: "With so many sponge flavours, there's something for everyone."
                },
                {
                    image: 'cow.svg',
                    heading: 'Free from options',
                    description: "I can cater for specific dietary requirements, including gluten free, dairy free, eggless and vegan."
                },
                {
                    image: 'gift-wrap.svg',
                    heading: 'Gift wrapping',
                    description: "Gift wrapping such as ribbon and gift notes are available."
                },
                {
                    image: 'van.svg',
                    heading: 'Delivery available',
                    description: "Delivery is available for an additional fee."
                }
            ]) }}
        </div>
    </section>

    {% from "macros/image-carousel.njk" import imageCarousel with context %}
    {{ imageCarousel(getMatchingCakes({ product: 'cupcakes' }, 30), 'linear-gradient(to bottom, #fff, #000)') }}

    {% from "macros/design-choices.njk" import designChoices with context %}
    {{
        designChoices(
            "Let's design your cupcakes!",
            "With cupcakes, there are so many options to choose from! Here are some of the most popular...",
            [
                {
                    name: "Cases",
                    items: [
                        {
                            name: "White paper",
