                        {
                            name: "Card",
                            image: "choices/cupcakes/toppers/card.jpg"
                        },
                        {
                            name: "Number",
                            image: "choices/cupcakes/toppers/number.jpg"
                        },
                        {
                            name: "Chocolate number",
                            image: "choices/cupcakes/toppers/chocolate-number.jpg"
                        },
                        {
                            name: "Chocolate",
                            image: "choices/cupcakes/toppers/chocolate.jpg"
                        },
                        {
                            name: "Shape",
