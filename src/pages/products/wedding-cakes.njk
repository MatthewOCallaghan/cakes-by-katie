    {{ imageCarousel(getMatchingCakes({ product: 'wedding-cake' }, 30, 30), 'linear-gradient(to bottom, #000, ' ~ pricing.weddingCakes.colour ~ ')') }}

    <section id="pricing" style="background:{{pricing.weddingCakes.colour}}">
        <h2 style="margin-top:0;">Pricing</h2>
        {% include "wedding-cake-pricing.njk" %}
    </section>

    {% from "macros/half-image-section.njk" import halfImageSection with context %}
    {{ halfImageSection(
        'How about some wedding favours?',
        [
            "My wedding favours are lovingly crafted to delight your guests and include cake jars, hot chocolate bombes and fondant covered cookies. They are the perfect gesture to thank your guests for sharing in your special day.",
