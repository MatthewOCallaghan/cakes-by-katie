    </section>

    <section id="portfolio">
        <div id="grid">
            {% from "macros/picture.njk" import pictureElement with context %}
            {% for item in portfolioSample %}
                {{ pictureElement("portfolio/" + portfolio[item].image, portfolio[item].name) }}
            {% endfor %}
        </div>
        <a class="button">See more</a>
    </section>

    <section id="testimonials">
        <div class="slideshow">
            <div class="container">
                <button class="slideshow-back">
                    ❮
                </button>

                <div class="reel" style="width: {{ testimonials.length * 100 }}%;">
                    {% for testimonial in testimonials %}
                        <div class="item" style="width: {{ 100 / testimonials.length }}%;">
                            <div class="image">
                                {{ pictureElement("portfolio/" + portfolio[testimonial.cake].image, portfolio[testimonial.cake].name) }}
                            </div>
                            <div class="quote">
                                <blockquote>{{ testimonial.text }}</blockquote>
                                <span>{{ testimonial.name }}, {{ testimonial.location }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <button class="slideshow-forward">
                    ❯
                </button>
            </div>

            <div class="indicators">
                {% for testimonial in testimonials %}
                    <button></button>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}


{% block scripts %}
    <script type="text/javascript" src="js/slideshow.js" defer></script>
{% endblock %}