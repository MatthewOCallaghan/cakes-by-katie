{% macro imageCarousel(cakes, background = '#fff') %}
{% from "macros/picture.njk" import pictureElement with context %}
<div class="image-slideshow" style="background:{{background}}">
        <!-- Slider main container -->
        <div class="swiper">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                {% for cake in cakes %}
                    <div class="swiper-slide">
                        <div
                            class="image-container"
                            style="aspect-ratio: {{ portfolio[cake].images[0].aspectRatio }}"
                            data-image="{{ portfolio[cake].images[0].src }}"
                            data-alt="{{ portfolio[cake].name }}"
                        >
                            {# Code will insert <picture> here #}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}