{% macro pageTitle(title, imagePath="backgrounds/marble-background.jpg", imageAlt="Marble background image") %}
{% from "macros/picture.njk" import pictureElement with context %}
{# Darken the background image if it isn't the default marble one. This makes text stand out better. #}
<div class="page-title{{ " darkened" if imagePath !== "backgrounds/marble-background.jpg"}}">
    {{ pictureElement(imagePath, imageAlt) }}
    <h1>{{ title }}</h1>
</div>
{% endmacro %}