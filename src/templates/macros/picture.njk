{% macro pictureElement(path, alt) %}
<picture>
    {% if development %}
        <img src="images/{{ path }}" alt="{{ alt }}" />
    {% else %}
        {% set name = path | removeExtension %}
        {% for type in imageFormats.formats %}
            <source
                type="image/{{ type }}"
                srcset="{{ imageFormats.widths | createSrcset("images/" + name, type) }}"
                sizes="{{ imageFormats.widths | createSizes }}"
            >
        {% endfor %}
        <img src="images/{{ name }}-{{imageFormats.widths[0]}}.{{imageFormats.formats[0]}}" alt="{{ alt }}" />
    {% endif %}
</picture>
{% endmacro %}